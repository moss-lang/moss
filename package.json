{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:tree-sitter && npm run build:vscode && npm run build:site",
    "build:site": "npm run build --workspace=@moss-lang/site",
    "build:tree-sitter": "npm run build --workspace=tree-sitter-moss",
    "build:vscode": "npm run build --workspace=moss",
    "format": "prettier --write .",
    "preview": "npm run preview --workspace=@moss-lang/site",
    "site": "npm run dev --workspace=@moss-lang/site"
  },
  "devDependencies": {
    "immutable": "^4",
    "prettier": "^2"
  }
}
