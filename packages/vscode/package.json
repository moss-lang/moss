{
  "name": "moss",
  "displayName": "Moss",
  "version": "0.3.0",
  "publisher": "moss-lang",
  "license": "MIT",
  "repository": "moss-lang/moss",
  "private": true,
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:moss"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "moss",
        "aliases": [
          "Moss",
          "moss"
        ],
        "extensions": [
          ".moss"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Moss configuration",
      "properties": {
        "moss.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "esbuild ./extension.js --bundle --loader:.wasm=file --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:server": "node build.js && esbuild ./server.js --bundle --outfile=dist/server.js --format=cjs --platform=node",
    "package": "vsce package",
    "vscode:prepublish": "npm run build"
  },
  "dependencies": {
    "@moss-lang/lsp": "0.3.0",
    "tree-sitter-moss": "0.3.0",
    "vscode-languageclient": "^8",
    "web-tree-sitter": "^0.20"
  },
  "devDependencies": {
    "esbuild": "^0.14",
    "vsce": "^2"
  }
}
