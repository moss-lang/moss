{
  "name": "moss-vscode",
  "displayName": "Moss",
  "version": "0.0.0",
  "publisher": "moss-lang",
  "description": "Language services for Moss.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moss-lang/moss",
    "directory": "packages/moss-vscode"
  },
  "private": true,
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:moss"
  ],
  "contributes": {
    "languages": [
      {
        "id": "moss",
        "aliases": [
          "Moss",
          "moss"
        ],
        "extensions": [
          ".moss"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Moss configuration",
      "properties": {
        "moss.exe": {
          "type": [
            "null",
            "string"
          ],
          "default": null,
          "description": "Path to Moss executable."
        },
        "moss.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && vsce package"
  }
}
